class Solution {
public:
    void duplicateZeros(vector<int>& arr) {
        int n = arr.size();
        
        for(int i = 0; i < n; i++){
            if(arr[i] == 0){
                for(int j = (n - 1); j >= (i+1); j--){
                    if(j == (i+1))
                        arr[j] = 0;
                    else
                        arr[j] = arr[j-1];
                }
                i+=1;
            }
        }
    }
};